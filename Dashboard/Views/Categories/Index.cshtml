@model IEnumerable<Dashboard.Models.Category>

<div class="container">
    <h1>Categories</h1>


    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", "Categories", new { id = category.Id })">Edit</a> |
                        <a href="@Url.Action("Delete", "Categories", new { id = category.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Categories")" class="btn btn-primary">Add New Category</a>
</div>