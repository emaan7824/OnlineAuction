<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Include your CSS files here -->
    <link href="~/css/argon.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
</head>

<body>

    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical fixed-left navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header align-items-center">
                <a class="navbar-brand" href="javascript:void(0)">
                    <img src="~/img/brand/blue.png" class="navbar-brand-img" alt="...">
                </a>
            </div>

            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">

                    <!-- Collapse header -->
                    <div class="navbar-collapse-header d-md-none">
                        <div class="row">
                            <div class="col-6 collapse-brand">
                                <a href="javascript:void(0)">
                                    <img src="~/img/brand/blue.png" class="navbar-brand-img" alt="...">
                                </a>
                            </div>
                            <div class="col-6 collapse-close">
                                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                    <span>Home</span>
                                    <span>Categories</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" href="@Url.Action("Index", "Home")">
                                <i class="ni ni-tv-2 text-primary"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/auctions" ? "active" : "")" href="@Url.Action("Auctions", "Admin")">
                                <i class="ni ni-cart text-orange"></i> Auctions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/bids" ? "active" : "")" href="@Url.Action("Bids", "Admin")">
                                <i class="ni ni-briefcase-24 text-primary"></i> Bids
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/categories" ? "active" : "")" href="@Url.Action("Index", "Categories")">
                                <i class="ni ni-collection text-green"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/users" ? "active" : "")" href="@Url.Action("Users", "Admin")">
                                <i class="ni ni-single-02 text-yellow"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/transactions" ? "active" : "")" href="@Url.Action("Transactions", "Admin")">
                                <i class="ni ni-money-coins text-info"></i> Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/reports" ? "active" : "")" href="@Url.Action("Reports", "Admin")">
                                <i class="ni ni-chart-pie-35 text-red"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path == "/settings" ? "active" : "")" href="@Url.Action("Settings", "Admin")">
                                <i class="ni ni-settings-gear-65 text-dark"></i> Settings
                            </a>
                        </li>
                    </ul>

                    <!-- Divider -->
                    <hr class="my-3">

                    <!-- Heading -->
                    <h6 class="navbar-heading p-0 text-muted">
                        <span class="docs-normal">Documentation</span>
                    </h6>

                    <!-- Documentation Links -->
                    <ul class="navbar-nav mb-md-3">
                        <li class="nav-item">
                            <a class="nav-link" href="/docs/getting-started/overview">
                                <i class="ni ni-spaceship"></i> Getting started
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/docs/foundation/colors">
                                <i class="ni ni-palette"></i> Foundation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/docs/components/alerts">
                                <i class="ni ni-ui-04"></i> Components
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://demos.creative-tim.com/argon-dashboard/docs/plugins/charts.html" target="_blank">
                                <i class="ni ni-chart-pie-35"></i> Plugins
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content" id="panel" style="margin-left: 250px;">

        <!-- New Top Navbar -->
<nav class="navbar navbar-top navbar-expand-md navbar-dark" style="background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;">
    <div class="container-fluid">

      <!-- Brand + Searchbar -->
 <a class="h3 mb-0 text-white text-uppercase d-none d-lg-inline-block" href="#">Dashboard</a>

 <form class="navbar-search navbar-search-light form-inline mr-3 d-none d-md-flex ml-lg-auto">
     <div class="form-group mb-0">
         <div class="input-group input-group-alternative">
             <div class="input-group-prepend">
                 <span class="input-group-text"><i class="fas fa-search"></i></span>
             </div>
             <input class="form-control" placeholder="Search" type="text">
         </div>
     </div>
 </form>




</nav>
        <!-- Page Content -->
        <div class="container-fluid mt-4">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-6">
                    <div class="copyright text-center text-xl-left text-muted">
                        &copy; 2020 <a href="https://www.creative-tim.com" class="font-weight-bold ml-1" target="_blank">Creative Tim</a>
                    </div>
                </div>
                <div class="col-xl-6">
                    <ul class="nav nav-footer justify-content-center justify-content-xl-end">
                        <li class="nav-item">
                            <a href="https://www.creative-tim.com" class="nav-link" target="_blank">Creative Tim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>

    </div>

    <!-- Include your JS files here -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

</body>

</html>
