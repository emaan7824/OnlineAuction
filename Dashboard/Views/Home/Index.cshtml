@model IEnumerable<Dashboard.Models.Category>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Categories Card with Icon -->
        <div class="col-xl-3 col-md-6">
            <div class="card card-stats">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <!-- Flexbox for Icon and Title on the Same Line -->
                            <div class="d-flex align-items-center">
                                <!-- Icon -->
                                <div class="icon icon-shape bg-gradient-purple text-white rounded-circle shadow me-3" style="font-size: 1.25rem;">
                                    <i class="ni ni-grid-45"></i> <!-- Grid Icon for Categories -->
                                </div>
                                <!-- Title with more margin -->
                                <h5 class="card-title text-uppercase text-muted mb-0" style="margin-left: 10px;">Categories</h5> <!-- Increased left margin -->
                            </div>
                            <ul>
                                @foreach (var category in Model)
                                {
                                    <li>@category.Name</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
